<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:background="@drawable/border_layout_full"
    android:layout_gravity="center"
    android:backgroundTint="#808080">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="34sp"
            android:fontFamily="@font/maplestory_bold"
            android:layout_marginLeft="20dp"
            android:text="옵션" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnDialogCancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_baseline_cancel_presentation_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bgSoundFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/maplestory_bold"
                android:textSize="20sp"
                android:text="배경음악" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioGroup
                android:id="@+id/bgMusicOnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/bgMusicOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_button_shape"
                    android:button="@null"
                    android:drawableStart="@drawable/ic_baseline_music_off_24"
                    android:padding="10dp" />

                <RadioButton
                    android:id="@+id/bgMusicOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_button_shape"
                    android:button="@null"
                    android:drawableStart="@drawable/ic_baseline_music_note_24"
                    android:padding="10dp"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/effectSoundFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/maplestory_bold"
                android:textSize="20sp"
                android:text="효과음"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioGroup
                android:id="@+id/effectSoundOnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"  >

                <RadioButton
                    android:id="@+id/effectSoundOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_button_shape"
                    android:button="@null"
                    android:drawableStart="@drawable/ic_baseline_music_off_24"
                    android:padding="10dp" />

                <RadioButton
                    android:id="@+id/effectSoundOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_button_shape"
                    android:button="@null"
                    android:drawableStart="@drawable/ic_baseline_music_note_24"
                    android:padding="10dp"/>

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnDialogOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:fontFamily="@font/maplestory_bold"
        android:text="확인" />

</LinearLayout>